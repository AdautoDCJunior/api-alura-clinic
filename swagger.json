{
  "openapi": "3.0.1",
  "info": {
    "title": "API de consultório",
    "description": "API para controlar médicos e suas especialidades dentro do consultório",
    "version": "1.0.0",
    "termsOfService": "https://github.com/AdautoDCJunior/api-alura-clinic",
    "contact": {
      "name": "Suporte a Devs",
      "email": "dev.adautojunior@gmail.com",
      "url": "https://github.com/AdautoDCJunior/api-alura-clinic"
    },
    "license": {
      "name": "GPLv3",
      "url": "https://www.gnu.org/licenses/gpl-3.0.pt-br.html"
    }
  },
  "externalDocs": {
    "description": "Documentação burocrática",
    "url": "https://github.com/AdautoDCJunior/api-alura-clinic"
  },
  "servers": [
    {
      "description": "API de testes",
      "url": "http://localhost:3000/api/"
    }
  ],
  "paths": {
    "/specialty": {
      "get": {
        "summary": "Recupera todas as especialidades",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "description": "Array de especialidades",
                  "type": "array",
                  "items": {
                    "description": "Objeto de especialidade",
                    "type": "object",
                    "properties": {
                      "id": {
                        "title": "ID de identificação única das especialidades",
                        "type": "integer"
                      },
                      "name": {
                        "title": "Nome da especialidade",
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Cria nova especialidade",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "description": "Objeto de especialidade sem ID",
                "properties": {
                  "name": {
                    "title": "Nome da especialidade",
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "description": "Objeto de especialidade",
                  "type": "object",
                  "properties": {
                    "id": {
                      "title": "ID de identificação única das especialidades",
                      "type": "integer"
                    },
                    "name": {
                      "title": "Nome da especialidade",
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/specialty/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "schema": {
            "type": "integer"
          },
          "required": true
        }
      ],
      "get": {
        "summary": "Recupera uma especialidade por ID",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "description": "Objeto de especialidade",
                  "type": "object",
                  "properties": {
                    "id": {
                      "title": "ID de identificação única das especialidades",
                      "type": "integer"
                    },
                    "name": {
                      "title": "Nome da especialidade",
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Atualiza uma especialidade por id",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "description": "Objeto de especialidade sem ID",
                "properties": {
                  "name": {
                    "title": "Nome da especialidade",
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Sucesso"
          }
        }
      },
      "delete": {
        "summary": "Deleta uma especialidade por id",
        "responses": {
          "204": {
            "description": "Sucesso"
          }
        }
      }
    }
  }
}
