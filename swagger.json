{
  "openapi": "3.0.1",
  "info": {
    "title": "API de consultório",
    "description": "API para controlar médicos e suas especialidades dentro do consultório",
    "version": "1.0.0",
    "termsOfService": "https://github.com/AdautoDCJunior/api-alura-clinic",
    "contact": {
      "name": "Suporte a Devs",
      "email": "dev.adautojunior@gmail.com",
      "url": "https://github.com/AdautoDCJunior/api-alura-clinic"
    },
    "license": {
      "name": "GPLv3",
      "url": "https://www.gnu.org/licenses/gpl-3.0.pt-br.html"
    }
  },
  "externalDocs": {
    "description": "Documentação burocrática",
    "url": "https://github.com/AdautoDCJunior/api-alura-clinic"
  },
  "servers": [
    {
      "description": "API de testes",
      "url": "http://localhost:3000/api/"
    }
  ],
  "security": [{ "auth": [] }],
  "paths": {
    "/specialty": {
      "get": {
        "summary": "Recupera todas as especialidades",
        "responses": {
          "200": {
            "$ref": "#/components/responses/specialtys"
          },
          "500": {
            "$ref": "#/components/responses/error"
          }
        },
        "tags": ["Especialidade"]
      },
      "post": {
        "summary": "Cria nova especialidade",
        "requestBody": {
          "$ref": "#/components/requestBodies/specialty"
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/specialty"
          },
          "500": {
            "$ref": "#/components/responses/error"
          }
        },
        "tags": ["Especialidade"]
      }
    },
    "/specialty/{id}": {
      "parameters": [{ "$ref": "#/components/parameters/specialtyID" }],
      "get": {
        "summary": "Recupera uma especialidade por ID",
        "responses": {
          "200": {
            "$ref": "#/components/responses/specialty"
          },
          "400": {
            "$ref": "#/components/responses/notFound"
          },
          "500": {
            "$ref": "#/components/responses/error"
          }
        },
        "tags": ["Especialidade"]
      },
      "put": {
        "summary": "Atualiza uma especialidade por id",
        "requestBody": {
          "$ref": "#/components/requestBodies/specialty"
        },
        "responses": {
          "204": {
            "description": "Sucesso"
          },
          "400": {
            "$ref": "#/components/responses/notFound"
          },
          "500": {
            "$ref": "#/components/responses/error"
          }
        },
        "tags": ["Especialidade"]
      },
      "delete": {
        "summary": "Deleta uma especialidade por id",
        "responses": {
          "204": {
            "description": "Sucesso"
          },
          "400": {
            "$ref": "#/components/responses/notFound"
          },
          "500": {
            "$ref": "#/components/responses/error"
          }
        },
        "tags": ["Especialidade"]
      }
    }
  },
  "components": {
    "parameters": {
      "specialtyID": {
        "name": "id",
        "in": "path",
        "schema": {
          "type": "integer"
        },
        "required": true
      }
    },
    "requestBodies": {
      "specialty": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/specialtyWithoutID"
            }
          }
        }
      }
    },
    "schemas": {
      "specialtyType": {
        "title": "especialidade",
        "description": "Objeto de especialidade",
        "type": "object",
        "properties": {
          "id": {
            "title": "ID de identificação única das especialidades",
            "type": "integer"
          },
          "name": {
            "title": "Nome da especialidade",
            "type": "string"
          }
        }
      },
      "specialtyArrayType": {
        "title": "especialidades [ ]",
        "description": "Array de especialidades",
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/specialtyType"
        }
      },
      "specialtyWithoutID": {
        "title": "especialidade sem id",
        "description": "Objeto de especialidade sem ID",
        "properties": {
          "name": {
            "title": "Nome da especialidade",
            "type": "string"
          }
        }
      },
      "error": {
        "title": "Erro",
        "description": "Objeto de erro",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      }
    },
    "responses": {
      "specialty": {
        "description": "Sucesso",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/specialtyType"
            }
          }
        }
      },
      "specialtys": {
        "description": "Sucesso",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/specialtyArrayType"
            }
          }
        }
      },
      "notFound": {
        "description": "Especialidade não encontrada",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/error"
            }
          }
        }
      },
      "error": {
        "description": "Erro interno desconhecido"
      }
    },
    "securitySchemes": {
      "auth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
